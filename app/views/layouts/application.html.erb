<!DOCTYPE html>
<>
  <head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%=csrf_meta_tags%>
    <%=csp_meta_tag%>

    <%=stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'%>
    <%=javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'%>
  </head>

  <span>
    <header class="main-header">
      <div class="wrapper">
        <nav class="header-nav">
          <a href="#" class="logo">
          <h1>NATURE</h1>
          </a>
          <ul class="nav-menu">
            <li class="nav-list">
              <a class="nav-link" href="<%=articles_path%>">ВСЕ СТАТЬИ</a>
            </li>
            <li class="nav-list">
              <a class="nav-link" href="<%=new_article_path%>">НОВАЯ СТАТЬЯ</a>
            </li>

            <%if user_signed_in?%>
                <li class="nav-list">
                  <%= link_to "ВЫХОД", destroy_user_session_path, method: :delete, class: "nav-link"%>
                </li>
            <%else%>
            <li class="nav-list">
              <%= link_to "ВХОД", new_user_session_path, class: "nav-link"%>
            </li>
            <li class="nav-list">
              <%= link_to "РЕГИСТРАЦИЯ", new_user_registration_path, class: "nav-link"%>
            </li>
             <%end%>

          </ul>
        </nav>
      </div>
    </header>

     <article>
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
     </article>

    <span class="parent-likes">
      <span class="like_count" <%=article.id%>'>
      <%= article.get_likes.size %> &#128591
      </span>

    <a>
      <% if current_user.liked? article %>
      <div>
        <%= link_to like_article_path(article, 'unlike'), class: "preached-btn",
        method: :put, remote: :true do %> Preached
      </div>
        <%end%>
        <%else%>
      <div>
        <%= link_to like_article_path(article, 'like'), class: "preach-btn",
        method: :put, remote: :true do %> Preach
      </div>
        <%end%>
      <%end%>
        </a>
  </span>

     <article class="main">
       <div>
         <%flash.each do |name, message|%>
         <div class= "alert alert-<%=name%>">
           <%message%>
         </div>
             <%end%>
       </div>
        <%=yield%>
     </article>

  </body>
</html>
